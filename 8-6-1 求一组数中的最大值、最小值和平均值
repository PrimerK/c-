#include <stdio.h>
float fun(int a[],int n,int *max,int *min);
int main()
{
int x[10],i,m,n;
float p;
for(i=0;i<10;i++)
  scanf("%d",&x[i]);
p=fun(x,10,&m,&n);
printf("max=%d,min=%d,average=%.2f\n",m,n,p);
return 0;
}

float fun(int a[],int n,int *max,int *min)
{
    *max=a[0];
    *min=a[0];
    int sum=a[0];
    for(int i=1;i<n;i++)
    {
        if(a[i]>*max){
            *max=a[i];
        }
        else if(a[i]<*min){
            *min=a[i];
        }
        sum+=a[i];
    }
    double av=(sum+0.0)/n;
    return av;
}
